{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "lib": ["es2018.asynciterable"],
        "noEmit": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node"
    },
    "include": ["./src/**/*.ts", "./test/**/*.ts"],
    "exclude": ["./dist/**"]
}
