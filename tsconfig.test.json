{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "lib": [
            "es2015.generator",
            "es2015.iterable",
            "es2015.promise",
            "es2018.asynciterable",
            "es2018.promise",
            "esnext.bigint"
        ],
        "noEmit": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node"
    },
    "include": ["test/**/*.ts"]
}
