{
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "lib": ["es2018.asynciterable"],
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["src/playground.ts", "src/logger.ts"]
}
