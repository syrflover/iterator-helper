{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "baseUrl": ".",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node",
        "plugins": [
            {
                "name": "typescript-deno-plugin"
            }
        ],
        "paths": {
            "http://*": ["~/Library/Caches/deno/deps/http/*"],
            "https://*": ["~/Library/Caches/deno/deps/https/*"]
        }
    },
    "include": ["./src"]
}
