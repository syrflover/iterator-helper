{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "baseUrl": ".",
        "outDir": "dist",
        // "emitDeclarationOnly": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "moduleResolution": "node"
    },
    "include": ["./src/mod.ts", "./src/types/global.ts"]
}
